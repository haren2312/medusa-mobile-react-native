{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@styles/*": ["app/styles/*"],
      "@images/*": ["app/images/*"],
      "@screens/*": ["app/screens/*"],
      "@components/*": ["app/components/*"],
      "@api/*": ["app/api/*"],
      "@utils/*": ["app/utils/*"],
      "@data/*": ["app/data/*"],
      "@types/*": ["app/types/*"]
    }
  }
}
